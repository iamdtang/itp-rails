<div class="page-header">
  <h1>
    <%= @term.course.department %> <%= @term.course.number %> - <%= @term.course.name %>
  </h1>
</div>

<div class="row">
  <div class="col-sm-8">
    <h3 class="block-title">Lectures</h3>
    <% @term.course.lectures.reverse.each do |lecture| %>
      <div class="lecture">
        <span class="lecture-date">
          <%= lecture.date.strftime('%-m/%-d') %>
        </span>

        <% if (lecture.body) %>
          <%= link_to(lecture_path(lecture)) do %>
            <%= lecture.title %>
          <% end %>
        <% else %>
          <%= lecture.title %>
        <% end %>
        <ul>
          <% lecture.resources.each do |resource| %>
            <li>
              <a href="<%= resource.link %>" target="_blank">
                <%= resource.link_title %>
              </a>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="col-sm-4">
    <h3 class="block-title">Assignments</h3>
    <ol>
      <% @term.course.assignments.each do |assignment| %>
        <li>
          <%= link_to(assignment_path(assignment)) do %>
            <%= assignment.title %> (due <%= assignment.due.strftime('%-m/%-d') %>)
          <% end %>
        </li>
      <% end %>
    </ol>
  </div>
</div>
